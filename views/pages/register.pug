block content
  .container
    .container
      .wrapper
        form.form-signin(action='register', method='POST', name='Login_Form')
          h2.form-signin-heading Welcome to my page! 
          h3.form-signin-heading Join up!
          hr.colorgraph
          br
          input.form-control(type='text', name='username', placeholder='Email', required='', autofocus='')
